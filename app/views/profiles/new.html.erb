<h1 class="h1pro"> 
	Please answer the questions to complete your profile. 
</h1>
<div class="form1">
	<%= form_for @profile, url: user_profile_path(current_user.id), action: :create, method: :post do |f| %>
		<div class="">
			<%= f.label :avatar, "Upload a photo of yourself." %><br>
			<%= f.file_field :avatar %>
		</div>
		<div class="">
			<%= f.label :fname, "First Name" %><br>
			<%= f.text_field :fname %>
		</div>
		<div class="">
			<%= f.label :lname, "Last Name" %><br>
			<%= f.text_field :lname %>
		</div>
		<div class="">
			<%= f.label :username, "Username" %><br>
			<%= f.text_field :username %>
		</div>
		<div class="">
			<%= f.label :email, "Email" %><br>
			<%= f.text_field :email %>
		</div>
		<div class="">
			<%= f.label :street_address, "Street Address" %><br>
			<%= f.text_field :street_address %>
		</div>
		<div class="">
			<%= f.label :city, "City" %><br>
			<%= f.text_field :city %>
		</div>
		<div class="">
			<%= f.label :state, "State or Province" %><br>
			<%= f.text_field :state %>
		</div>
		<div class="">
			<%= f.label :zip, "Zip or Post Code" %><br>
			<%= f.text_field :zip %>
		</div>
		<div class="">
			<%= f.label :country, "Country" %><br>
			<%= f.text_field :country %>
		</div>
		<div class="">
			<%= f.label :cell, "Mobile Number" %><br>
			<%= f.text_field :cell %>
		</div>
		<div class="">
			<%= f.label :fbhandle, "Facebook Handle" %><br>
			<%= f.text_field :fbhandle %>
		</div>
		<div class="">
			<%= f.label :twhandle, "Twitter Handle" %><br>
			<%= f.text_field :twhandle %>
		</div>
		<div class="">
			<%= f.label :lihandle, "LinkedIn Handle" %><br>
			<%= f.text_field :lihandle %>
		</div>
		<div class="">
			<%= f.label :insthandle, "Instagram Handle" %><br>
			<%= f.text_field :insthandle %>
		</div>
		<div class="">
			<%= f.check_box :hractive %>
			<%= f.label :hractive, "Please check if you have experience working on human rights issues." %>
		</div>
	</div>
	<div class="form2">
		<div class="">
			<%= f.label :focuses, "If you have experience working in human rights, in what areas have you worked?" %><br>
			<%= f.text_area :focuses %>
		</div>
		<div class="">
			<%= f.label :title, "Would you consider yourself an activist, educator, social worker, elected official, artist, business owner, other? (Select all that apply.)" %><br>
			<%= f.collection_select :title, Profile::TITLE, :to_s, :to_s, :prompt => "Please Select", :multiple => true, :size => 7 %>
		</div>
		<div class="">
			<%= f.label :title, 'If you included "other" in your title selections, please share your "other title."' %><br>
			<%= f.text_field :title %>
		</div>
		<div class="">
			<%= f.label :profession, "What is your professional title?" %><br>
			<%= f.text_field :profession %>
		</div>
		<div class="">
			<%= f.label :volunteer_skills, "Of the skills you possess that would benefit a project like the building of Ubuntu Nation, please list any you are willing to contribute as a volunteer." %><br>
			<%= f.text_area :volunteer_skills %>
		</div>
		<div class="">
			<%= f.label :consultant_skills, "Of the skills you possess that would benefit a project like the building of Ubuntu Nation, please list any you are willing to contribute as a consultant." %><br>
			<%= f.text_area :consultant_skills %>
		</div>
		<div id="submit">
			<%= f.submit 'Submit' %>
		</div>
	<% end %>
</div>