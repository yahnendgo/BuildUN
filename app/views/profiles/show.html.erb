						 	<span class="postavatar">
						 	<%= video_tag medium.media.url(:medium), :controls => true %>
						 	</span>
						 	<h4>
								<%= medium.name %><br>
								<%= medium.description %>
							</h4>
						</div>
					<% end %>
					<div class="photo">
						media
					</div>
					<div class="photo">
						media
					</div>
					<div class="photo">
						media
					</div>
					<div class="photo">
						media
					</div>
				</div>
			</div>
		</div>	
	

	<!-- second row, #posts -->

		<div class="prowrapper">
			<h1 class="proheaders">
				Your Posts	
			</h1>
			<div class="editphoto">
			<!-- edit icon -->
				<span class="editpng">
