				 			<% end %>
							<%= photo.description %><br>
						 </div>
					 <% end %>
				</div>
			</div>
		</div>	

	<!-- fourth row, #connections -->

		<div class="userwrapper">
			<h1 class="proheaders">
				Your Connections
			</h1>
			<div class="editphoto">
				<span class="editpng">
			 		<%= link_to users_path do %>
			 			<%= image_tag "/images/eye.png" %>
