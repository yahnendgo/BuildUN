			 			<%= image_tag "/images/edit.png" %>
			 		<% end %>
			 		<%= link_to user_posts_path(current_user) do %>
			 			<%= image_tag "/images/eye.png" %>
			 		<% end %>
			 	</span>
			 	<div class="float">
					<% @posts.each do |post| %>
						<div class="photo">
						 	<span class="postavatar">
						 	<%= image_tag post.avatar.url %>
						 	</span>
						 	<h4>
								<%= link_to post.title, user_post_path(current_user, post) %><br><br>
								<%= post.body %>
							</h4>
						</div>
					<% end %>
					<div class="photo">
						post
					</div>
					<div class="photo">
						post
					</div>
					<div class="photo">
						post
					</div>
				</div>
			</div>
		</div>

	<!-- third row, #connections -->


		<div class="prowrapper">
			<h1 class="proheaders">
				Your Photos
			</h1>
			<div class="editphoto">
