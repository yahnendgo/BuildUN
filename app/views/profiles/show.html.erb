<!-- current's user's profile -->

<% if current_user.profile == @profile %>

	<h1 id="welcome">
		Welcome home <%= current_user.profile.fname %>!
	</h1>

<!-- profile information on left -->

	<div class="profile">
		<div id="proimage">
			<span class="propic">
			<%= image_tag current_user.profile.avatar.url(:medium) %>
			</span>
		</div><br>
		<%= current_user.profile.fname %> <%= current_user.profile.lname %><br>
		From:<br>
			<p class="indent"><%= current_user.profile.city %> | <%= current_user.profile.country %></p><br>
		Contact:<br>
			<p class="indent"><%= current_user.profile.email %></p><br>
			<p class="indent"><%= current_user.profile.cell %></p><br>
		Handles: <br>
			<p class="indent">Facebook - <%= current_user.profile.fbhandle %></p><br>
			<p class="indent">Twitter - <%= current_user.profile.twhandle %></p><br>
			<p class="indent">LinkedIn - <%= current_user.profile.lihandle %></p><br>
			<p class="indent">Instagram - <%= current_user.profile.twhandle %></p><br>
		<% if current_user.profile.hractive == true %>
			<%= current_user.profile.fname %> has experience working in Human Rights in the following areas:<br>
				<div class="caps" id="indent"><%= current_user.profile.focuses %></div><br>
		<% end %>
		Professional Title: <tagname class="caps"><%= current_user.profile.title %></tagname><br>
		Skills <%= current_user.profile.fname %> can contribute as a volunteer:<br>
			<p class="indent caps"><%= current_user.profile.volunteer_skills %></p><br>
		Skills <%= current_user.profile.fname %> can contribute as a consultant:<br>
			<p class="indent"><%= current_user.profile.consultant_skills %></p><br><br>
			<div id="edit">
			<%= link_to "Edit Profile", edit_user_profile_path(current_user) %>
			</div>
			<br>
		<h3>
		Human Rights Issues closest to <%= current_user.profile.fname %>'s heart

			(<%= link_to "update", issues_index_form_path %>):
		</h3>	
		<div class="isswrapper">
			<% current_user.issues.each do |issue| %>
				<%= link_to issue_path(issue) do %>	
					 <div class="iss">
					 	<%= image_tag issue.avatar.url(:thumb) %><br>
						<%= issue.name %><br>
				 	</div>
				<% end %>
			 <% end %>
			</div>	
	</div>

<!-- above, end of profile info on left -->
<!-- below, beginning of profile info on right -->


	<div id="proright">

	<!-- first row, #media -->

		<div class="mediawrapper">
			<h1 class="proheaders">
				Your Media Shares	
			</h1>
			<div class="editphoto">
