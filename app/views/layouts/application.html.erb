	<% end %>

<%= render :partial => "layouts/nav" unless @skip_nav %>
<%= render :partial => "layouts/learn" if @skip_nav %>	

<img src="/images/flaghooded.jpg" id="logo">

<%= yield %>

</body>
</html>
